<p id="notice"><%= notice %></p>

<h1>Pet Registry</h1>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>

<h3>
  Pet History
</h3>
<%= link_to 'See More', pet_pet_histories_path(@pet) %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Peso</th>
      <th>Altura</th>
    </tr>
  </thead>

  <tbody>
    <% @pet.pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Others data of interest</h3>
<table>
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
